.quickProfileContainer {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 1rem;
  min-height: 100vh;
}

/* Progress Bar */
.progressContainer {
  margin-bottom: 3rem;
}

.progressBar {
  width: 100%;
  height: 8px;
  background: rgba(22, 160, 133, 0.1);
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.progressFill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-teal), var(--color-blue));
  transition: width 0.3s ease;
}

.progressText {
  text-align: center;
  font-size: var(--text-sm);
  color: var(--color-text-light);
  font-weight: var(--font-medium);
}

/* Question Section */
.questionSection {
  margin-bottom: 3rem;
}

.questionCard {
  background: white;
  border-radius: 12px;
  padding: 2.5rem;
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
  margin-bottom: 2rem;
  transition: opacity 0.3s ease;
}

.questionCard.transitioning {
  opacity: 0.6;
  pointer-events: none;
}

.questionText {
  font-size: var(--text-2xl);
  font-weight: var(--font-semibold);
  color: var(--color-navy);
  margin-bottom: 2rem;
  line-height: var(--leading-relaxed);
}

/* Options */
.options {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.option {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1.25rem;
  background: var(--color-bg);
  border: 2px solid transparent;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.option:hover {
  background: rgba(22, 160, 133, 0.05);
  border-color: var(--color-teal);
}

.option.selected {
  background: rgba(22, 160, 133, 0.1);
  border-color: var(--color-teal);
}

.option input[type="radio"] {
  margin-top: 0.25rem;
  width: 20px;
  height: 20px;
  flex-shrink: 0;
  cursor: pointer;
}

.optionLabel {
  flex: 1;
  font-size: var(--text-base);
  line-height: var(--leading-relaxed);
  color: var(--color-text);
}

/* Navigation */
.navigationButtons {
  display: flex;
  gap: 1rem;
  justify-content: space-between;
  margin-top: 2rem;
}

.buttonPrimary,
.buttonSecondary {
  padding: 1rem 2rem;
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
}

.buttonPrimary {
  background: var(--color-teal);
  color: white;
  flex: 1;
}

.buttonPrimary:hover:not(:disabled) {
  background: var(--color-blue);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(22, 160, 133, 0.3);
}

.buttonPrimary:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.buttonSecondary {
  background: white;
  color: var(--color-teal);
  border: 2px solid var(--color-teal);
}

.buttonSecondary:hover:not(:disabled) {
  background: rgba(22, 160, 133, 0.05);
}

.buttonSecondary:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

/* Error */
.error {
  background: #fee;
  border: 1px solid #fcc;
  color: #c00;
  padding: 1rem;
  border-radius: 6px;
  margin-top: 1rem;
  font-size: var(--text-sm);
}

/* Instructions */
.instructions {
  background: rgba(22, 160, 133, 0.05);
  border-left: 4px solid var(--color-teal);
  padding: 1.5rem;
  border-radius: 6px;
  font-size: var(--text-sm);
  color: var(--color-text-light);
  line-height: var(--leading-relaxed);
}

.instructions p {
  margin: 0.5rem 0;
}

.instructions strong {
  color: var(--color-navy);
  font-weight: var(--font-semibold);
}

/* Responsive */
@media (max-width: 768px) {
  .quickProfileContainer {
    padding: 1.5rem 1rem;
  }

  .questionCard {
    padding: 1.5rem;
  }

  .questionText {
    font-size: var(--text-xl);
  }

  .navigationButtons {
    flex-direction: column;
  }

  .buttonPrimary,
  .buttonSecondary {
    width: 100%;
  }
}

.option.disabled {
  cursor: not-allowed;
  opacity: 0.6;
}

.submittingText {
  color: var(--color-teal);
  font-weight: var(--font-semibold);
  font-size: var(--text-lg);
  text-align: center;
  padding: 1rem;
}
